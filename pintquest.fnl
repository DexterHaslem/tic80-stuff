(var t 0)
(var v 0)

(var mapx 0)
(var mapy 0)

(fn ani [step]
     (let [d (% step 8)]
          (+ 256 (if (> d 3) (- 7 d) d))))

(fn _G.TIC []
     (cls)
     (when (btn 3)
       (set mapx (+ mapx 1)))
      (when (btn 2)
        (set mapx (- mapx 1)))
      (when (btn 0)
        (set mapy (- mapy 1)))
      (when (btn 1) (set mapy (+ mapy 1)))
    
     (map mapx mapy)
     (set t (+ 1 t))
     (spr (ani v) 1 40))

